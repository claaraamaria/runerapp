<?xml version="1.0" encoding="utf-8"?>


<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="5dp"
        app:layout_box="all">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.wearable.view.CircledImageView
                android:id="@+id/icon_newlap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_av_newlap"
                app:circle_border_width="0dp"
                app:circle_color="@color/action_button"
                app:circle_radius="@dimen/two_button_radius" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/New_lap"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.wearable.view.CircledImageView
                android:id="@+id/icon_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_av_play_arrow"
                app:circle_border_width="0dp"
                app:circle_color="@color/action_button"
                app:circle_radius="@dimen/two_button_radius" />

            <TextView
                android:id="@+id/txt_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Resume"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
</android.support.wearable.view.BoxInsetLayout>
